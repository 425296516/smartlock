<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scan_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_rec_1654e2"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="使用扫一扫添加设备"
            android:textColor="@color/color_1654E2"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_imei"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_et_bg_e2ecff"
            android:drawableRight="@drawable/ic_star_black_6dp"
            android:hint="请输入IMEI号"
            android:padding="10dp"
            android:textColor="@color/color_8C8686"
            android:visibility="gone"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_scan_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/pic_dianji" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/shape_rec_1654e2"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="添加个人信息"
            android:textColor="@color/color_1654E2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg_e2ecff"
                android:drawableRight="@drawable/ic_star_black_6dp"
                android:hint="请输入姓名"
                android:padding="10dp"
                android:textColor="@color/color_8C8686"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_input_wordid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg_e2ecff"
                android:drawableRight="@drawable/ic_star_black_6dp"
                android:hint="请输入工号"
                android:padding="10dp"
                android:textColor="@color/color_8C8686"
                android:textSize="14sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_input_idcard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et_bg_e2ecff"
            android:drawableRight="@drawable/ic_star_black_6dp"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:padding="10dp"
            android:textColor="@color/color_8C8686"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et_bg_e2ecff"
            android:drawableRight="@drawable/ic_star_black_6dp"
            android:hint="请输入电话"
            android:maxLength="11"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/color_8C8686"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg_e2ecff"
                android:drawableRight="@drawable/ic_star_black_6dp"
                android:hint="请输入年龄"
                android:padding="10dp"
                android:textColor="@color/color_8C8686"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_input_bloodtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_et_bg_e2ecff"
                android:digits="ABO"
                android:drawableRight="@drawable/ic_star_black_6dp"
                android:hint="请输入血型"
                android:maxLength="2"
                android:padding="10dp"
                android:textColor="@color/color_8C8686"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="性别" />


            <RadioButton
                android:id="@+id/cb_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@drawable/selector_radiobutton_sex"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="男" />

            <RadioButton
                android:id="@+id/cb_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@drawable/selector_radiobutton_sex"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="女" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/color_668FEC"
            android:gravity="center"
            android:padding="10dp"
            android:text="提交"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>