<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_warn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="风速报警"
        android:textColor="@color/color_E53232"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="张三"
        android:textColor="@color/color_1F1F1F"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="14:00"
        android:textColor="@color/color_1F1F1F"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_deal_result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="已处理"
        android:textColor="@color/color_549203"
        android:textSize="14sp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_deal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_E2ECFF"
            android:gravity="center"
           android:padding="7dp"
            android:text="点击处理"
            android:textColor="@color/color_1F1F1F"
            android:textSize="14sp" />

    </RelativeLayout>



</LinearLayout>