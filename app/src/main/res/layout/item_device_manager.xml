<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_imei"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="838383838383838"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="王建国"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_idcard"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="320321199103283123"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="15850754811"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />

    <com.anlida.smartlock.widget.DrawableCenterTextView
        android:id="@+id/tv_lock_status"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="未开机"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_3"
        android:drawablePadding="5dp"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />


    <com.anlida.smartlock.widget.DrawableCenterTextView
        android:id="@+id/tv_net_status"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:text="有信号"
        android:drawableLeft="@drawable/icon_6"
        android:drawablePadding="5dp"
        android:textColor="@color/color_1F1F1F"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@drawable/shape_item_device_manager_e2ecff"
        android:scaleType="centerInside"
        android:src="@drawable/btn_more" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/btn_blue" />

</LinearLayout>