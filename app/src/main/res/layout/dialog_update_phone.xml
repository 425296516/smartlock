<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_login_bg"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_phone_title"
        android:layout_gravity="center_horizontal"
        android:text="修改电话"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_et_bg_e2ecff"
        android:drawableRight="@drawable/ic_star_black_6dp"
        android:hint="请输入新的电话号码"
        android:maxLength="11"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="@color/color_8C8686"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verficode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@drawable/shape_et_bg_e2ecff"
            android:drawableRight="@drawable/ic_star_black_6dp"
            android:hint="请输入手机验证码"
            android:maxLength="6"
            android:inputType="phone"
            android:padding="5dp"
            android:textColor="@color/color_8C8686"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_get_verficode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:background="@drawable/shape_et_bg_e2ecff"
            android:gravity="center"
            android:text="获取验证码"
            android:padding="5dp"
            android:textColor="@color/color_668FEC"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_668FEC"
        android:gravity="center"
        android:padding="5dp"
        android:text="确定"
        android:textColor="@android:color/white" />

</LinearLayout>