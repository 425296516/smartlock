<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="bmWidth" format="dimension"></attr>
        <attr name="bmHeight" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="CountDownProgress">
        <!-- 圆实心的颜色 -->
        <attr name="circSolidColor" format="color"></attr>
        <!-- 圆边框的颜色 -->
        <attr name="circFrameColor" format="color"></attr>
        <!-- 进度条的颜色 -->
        <attr name="progressColor" format="color"></attr>
        <!-- 文字的颜色 -->
        <attr name="textColor" format="color"></attr>
    </declare-styleable>

    <!--自定义ImageView属性-->
    <declare-styleable name="CustomImageView">
        <attr name="min_scale_factor" format="float" />
        <attr name="max_scale_factor" format="float" />
        <attr name="can_back_translate" format="boolean" />
        <attr name="can_back_rotate" format="boolean" />
        <attr name="can_back_scale" format="boolean" />
        <attr name="animator_time" format="integer" />
    </declare-styleable>

    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="umanoPanelHeight" format="dimension" />
        <attr name="umanoShadowHeight" format="dimension" />
        <attr name="umanoParallaxOffset" format="dimension" />
        <attr name="umanoFadeColor" format="color" />
        <attr name="umanoFlingVelocity" format="integer" />
        <attr name="umanoDragView" format="reference" />
        <attr name="umanoScrollableView" format="reference" />
        <attr name="umanoOverlay" format="boolean" />
        <attr name="umanoClipPanel" format="boolean" />
        <attr name="umanoAnchorPoint" format="float" />
        <attr name="umanoInitialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
        <attr name="umanoScrollInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer" />
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />

        <!-- 背景边框的颜色 -->
        <attr name="borderColor" format="color" />
        <!-- 背景边框的大小 -->
        <attr name="borderSize" format="dimension" />
        <!-- 边框条目间距 -->
        <attr name="itemOffset" format="dimension" />
        <!--边框背景色-->
        <attr name="itemColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RotateRefreshImage">
        <!-- loading旋转的次数 -->
        <attr name="repeatCount" format="integer" />

    </declare-styleable>

    <declare-styleable name="SlideDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float"/>
        <!-- how long the animation keep-->
        <attr name="duration" format="integer"/>
        <!-- default panel to show after init-->
        <attr name="default_panel" format="enum">
            <enum name="front" value="0"/>
            <enum name="behind" value="1"/>
        </attr>
    </declare-styleable>

</resources>